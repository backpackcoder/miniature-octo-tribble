@model IEnumerable<MvcApp.Models.Church>
@{ ViewData["Title"] = "Server Page - Index"; }

<script>var g_churches = [];</script>
<div class="row">
    <div id="map" class="col-md-8"></div>
    <div id="datatable" class="col-md-4">
        <h3>
            Churches 
            <a asp-action="Create" class="btn btn-success btn-xs pull-right" title="Add church">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </a>
        </h3>   
        <table class="table table-striped table-hover">
            <tbody>
                @foreach (var item in Model)
                {
                <script>g_churches.push({name: "@item.Name", lat: @item.Lat, lng: @item.Lng});</script>
                <tr>
                    <td class="col-md-7">@Html.DisplayFor(modelItem => item.Name)</td>
                    <td class="col-md-5" style="text-align: right;">
                        <div class="btn-group">
                            <a class="btn btn-link btn-xs" title="find on map" 
                                onclick="g_map.setView([@item.Lat, @item.Lng], 17);">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link btn-xs" title="edit">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link btn-xs" title="delete">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </a>
                      </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
